# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=your-secret-key-here-change-in-production

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# Database
DATABASE_URL=sqlite:///lottery.db

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# ETL Configuration
ETL_SCHEDULE_CRON=0 3 * * *
ETL_MAX_RETRIES=3
ETL_TIMEOUT=300

# Data Sources (Official URLs)
PAIS_LOTTO_URL=https://www.pais.co.il/lotto/archive.aspx
PAIS_CHANCE_URL=https://www.pais.co.il/chance/archive.aspx
PAIS_777_URL=https://www.pais.co.il/777/archive.aspx
SPORTOTO_WINNER_URL=https://www.sportoto.co.il

# GitHub Actions
GITHUB_TOKEN=${GITHUB_TOKEN}
GITHUB_REPO=ubriga/lottery-data-archive

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
